@model NewsAPI.Models.News

@{
    ViewData["Title"] = "Details";
}
<section class="bannerw3l-hnyv">
    <div class="slider col-12" style="height:400px">
        <!-- slides -->
        <div class="slider__slides">
            <div class="slide s--active">
                <div class="slide__inner">
                    <div class="slide__content">
                        <h3 class="slide__heading">
                            Top News
                        </h3>
                        <p class="slide__text">All news, moment by moment </p>
                    </div>
                </div>
            </div>
            <div class="slide">
                <div class="slide__inner">
                    <div class="slide__content">
                        <h3 class="slide__heading">
                            Best Stuff Ever
                        </h3>
                        <p class="slide__text">Work Around the clock </p>
                    </div>
                </div>
            </div>
            <div class="slide">
                <div class="slide__inner">
                    <div class="slide__content">
                        <h3 class="slide__heading">Stock exchange</h3>
                        <p class="slide__text">news about the stock exchange</p>
                    </div>
                </div>
            </div>
            <div class="slide">
                <div class="slide__inner">
                    <div class="slide__content">
                        <h3 class="slide__heading">Stay tuned for latest news</h3>
                        <p class="slide__text">news here and there</p>
                    </div>
                </div>
            </div>
            <div class="slide s--prev">
                <div class="slide__inner">
                    <div class="slide__content">
                        <h3 class="slide__heading">Breaking neeews</h3>
                        <p class="slide__text">Stay with us to know about everything</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- slides end -->
        <div class="slider__control">
            <div class="slider__control-line"></div>
            <div class="slider__control-line"></div>
        </div>
        <div class="slider__control slider__control--right m--right">
            <div class="slider__control-line"></div>
            <div class="slider__control-line"></div>
        </div>
    </div>
    <div class="bannerw3l-layer"></div>
</section>
<!--//Banner-End-->

<div style="background-color:rgb(247,247,247);" class="col-lg-12 passion-grid-item-info  mt-lg-3 mt-5 ml-lg-2">
    <h6 class="title-subw3hny">@Html.DisplayFor(model => model.Author.Name)</h6>


    <h3 class="title-w3l mb-4"> @Html.DisplayFor(model => model.Title)</h3>
    <br />
    <h4 class=" mb-4" style="font-family:'Global Sans Serif'"> @Html.DisplayFor(model => model.OurNews)</h4>
    <h2 class="mt-3 pr-lg-3">
    </h2>
    <div class="passion-grid-item-pic mt-lg-3">
        <img class="col-lg-7" src=" @Html.DisplayFor(model => model.NewsImg)" alt="paayz">

    </div>
    <h6 class="title-subw3hny">
        @Html.DisplayFor(model => model.PublicationDate)
    </h6>

    <a class="btn btn-primary btn-style mt-lg-4 mt-4" asp-action="Index">↩ </a>

    <br />
    <hr />
</div>
