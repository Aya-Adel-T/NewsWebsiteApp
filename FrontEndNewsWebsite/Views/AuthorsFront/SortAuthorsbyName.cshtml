@model IEnumerable<NewsAPI.Models.Author>

@{
    ViewData["Title"] = "SortAuthorsbyName";
}

<h1>SortAuthorsbyName</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<section class="w3l-passion-mid-sec">
